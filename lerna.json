{
	"packages": [
		"packages/*"
	],
	"version": "independent",
	"command": {
		"publish": {
			"yes": true,
			"message": "chore: publish new versions",
			"conventionalCommits": true,
			"ignoreChanges": [
				"*.md",
				"*.spec.ts"
			]
		},
		"bootstrap": {
			"scope": [
				"@skelia/*"
			],
			"hoist": true
		},
		"exec": {
			"scope": [
				"@skelia/*"
			]
		},
		"clean": {
			"yes": true
		}
	}
}